# DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/postgres

# Pool sizing
DB_MIN_CONNECTIONS=0
DB_MAX_CONNECTIONS=20

# Timeouts (seconds)
DB_CONNECT_TIMEOUT_SECS=5
DB_ACQUIRE_TIMEOUT_SECS=5
# Optional; uncomment to enable
# DB_IDLE_TIMEOUT_SECS=300
# DB_MAX_LIFETIME_SECS=1800

# Retry/backoff for initial connections
DB_RETRY_MAX_ATTEMPTS=5
DB_RETRY_BASE_BACKOFF_MS=200

# Behavior
# When true, start-up requires DB availability (init() returns error on failure).
# When false, start-up proceeds and the first get_pool() will retry lazily.
DB_EAGER_INIT=false

# Run sqlx migrations after the first successful connection.
# Migrations are embedded from gurt-db/migrations.
DB_MIGRATE_ON_START=false

GURT_DEBUG_INDEX=1
GURT_DEBUG_BODY=1
GURT_CONNECT_TIMEOUT_MS=10000
GURT_HANDSHAKE_TIMEOUT_MS=5000
GURT_FETCH_TIMEOUT_MS=30000
GURT_READ_IDLE_MS=1500
GURT_DNS_ADDR="135.125.163.131"